{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"],
      "@components": ["/components/*"],
      "@redux": ["/redux/*"],
      "@assets": ["/assets/*"],
      "@stores": ["/stores/*"],
      "@utils": ["/utils/*"],
      "@constants": ["/constants/*"],
      // "@types": ["/types","/types/*"],
    },
    "types": ["node"]
  },
  "include": ["src", "types/@ckeditor", "deprecated_src/pages/Authentication/creator.tsx"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
